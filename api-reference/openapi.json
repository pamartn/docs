{
  "openapi": "3.1.0",
  "info": {
    "title": "Fetchin API",
    "version": "1.0.0",
    "description": "Public LinkedIn data API for fetching posts and profile information"
  },
  "servers": [
    {
      "url": "https://your-domain.com",
      "description": "Production server"
    }
  ],
  "components": {
    "securitySchemes": {
      "ApiKeyAuth": {
        "type": "apiKey",
        "in": "header",
        "name": "X-API-Key"
      }
    }
  },
  "security": [
    {
      "ApiKeyAuth": []
    }
  ],
  "paths": {
    "/api/v1/posts": {
      "get": {
        "summary": "Get LinkedIn posts from a profile",
        "description": "Fetch posts from a LinkedIn profile using either profile URL or URN",
        "parameters": [
          {
            "name": "profileUrlOrUrn",
            "in": "query",
            "required": true,
            "description": "LinkedIn profile URL or URN",
            "schema": {
              "type": "string",
              "example": "https://www.linkedin.com/in/username"
            }
          },
          {
            "name": "count",
            "in": "query",
            "required": false,
            "description": "Number of posts to fetch (default: 10)",
            "schema": {
              "type": "integer",
              "minimum": 1,
              "maximum": 50,
              "default": 10
            }
          }
        ],
        "responses": {
          "200": {
            "description": "Successfully fetched posts",
            "content": {
              "application/json": {
                "schema": {
                  "type": "array",
                  "items": {
                    "type": "object",
                    "properties": {
                      "urn": {
                        "type": "string",
                        "example": "urn:li:activity:1234567890"
                      },
                      "text": {
                        "type": "string",
                        "example": "This is a LinkedIn post content..."
                      },
                      "publishedAt": {
                        "type": "string",
                        "format": "date-time"
                      },
                      "numberOfLikes": {
                        "type": "integer"
                      },
                      "numberOfComments": {
                        "type": "integer"
                      },
                      "numberOfReposts": {
                        "type": "integer"
                      },
                      "imageUrl": {
                        "type": "string"
                      },
                      "videoUrl": {
                        "type": "string"
                      }
                    }
                  }
                }
              }
            }
          },
          "400": {
            "description": "Bad request - Invalid parameters"
          },
          "401": {
            "description": "Unauthorized - Invalid or missing API key"
          },
          "429": {
            "description": "Too many requests - Quota exceeded"
          }
        }
      }
    },
    "/api/v1/profile": {
      "get": {
        "summary": "Get LinkedIn profile information",
        "description": "Fetch profile details from LinkedIn using profile URL or URN",
        "parameters": [
          {
            "name": "profileUrlOrUrn",
            "in": "query",
            "required": true,
            "description": "LinkedIn profile URL or URN",
            "schema": {
              "type": "string",
              "example": "https://www.linkedin.com/in/username"
            }
          }
        ],
        "responses": {
          "200": {
            "description": "Successfully fetched profile",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "properties": {
                    "urn": {
                      "type": "string"
                    },
                    "firstName": {
                      "type": "string"
                    },
                    "lastName": {
                      "type": "string"
                    },
                    "headline": {
                      "type": "string"
                    },
                    "location": {
                      "type": "string"
                    },
                    "profilePictureUrl": {
                      "type": "string"
                    },
                    "about": {
                      "type": "string"
                    },
                    "experiences": {
                      "type": "array",
                      "items": {
                        "type": "object",
                        "properties": {
                          "title": {
                            "type": "string"
                          },
                          "company": {
                            "type": "string"
                          },
                          "startDate": {
                            "type": "string"
                          },
                          "endDate": {
                            "type": "string"
                          }
                        }
                      }
                    },
                    "education": {
                      "type": "array",
                      "items": {
                        "type": "object",
                        "properties": {
                          "school": {
                            "type": "string"
                          },
                          "degree": {
                            "type": "string"
                          },
                          "startDate": {
                            "type": "string"
                          },
                          "endDate": {
                            "type": "string"
                          }
                        }
                      }
                    }
                  }
                }
              }
            }
          },
          "400": {
            "description": "Bad request - Invalid parameters"
          },
          "401": {
            "description": "Unauthorized - Invalid or missing API key"
          },
          "429": {
            "description": "Too many requests - Quota exceeded"
          }
        }
      }
    }
  }
}

